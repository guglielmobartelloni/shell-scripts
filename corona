#!/bin/sh

[ "$(stat -c %y ~/.cache/corona  2> /dev/null| cut -d' ' -f1)" != "$(date '+%Y-%m-%d')" ] &&
	curl -s https://corona-stats.online/italy > ~/.cache/corona

grep "Italy" ~/.cache/corona |
	sed 's/\s*//g ; s/â•‘//g; s/\x1b\[[0-9;]*m//g ; s/â”‚/;/g ; s/â–²//g' |
	awk -F';' '{print "[ğŸ”º" $4 " â˜ ï¸ " $6 "]"}'
